<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/recommend_card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.parse.ParseImageView
                android:id="@+id/food_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/chef_image"
                android:layout_centerHorizontal="true"
                android:maxHeight="250dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/chef_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/chefface"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/chef_name"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="@string/chef_name"
                android:layout_toEndOf="@+id/chef_image"
                android:layout_marginTop="20dp"
                android:textSize="15sp"/>

            <!--<TextView-->
            <!--android:id="@+id/chef_description_short"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:text="Chef Description"-->
            <!--android:layout_toEndOf="@+id/chef_image"-->
            <!--android:layout_below="@+id/chef_name"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:textSize="12sp"/>-->



            <TextView
                android:id="@+id/food_description_short"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="@string/food_description_short"
                android:layout_margin="5dp"
                android:layout_below="@+id/food_icon"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:paddingEnd="5dp"
                android:paddingStart="3dp"/>

            <Button
                android:id="@+id/order_button"
                style="@style/Button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/order_button"
                android:layout_below="@+id/food_icon"
                android:layout_alignEnd="@+id/food_icon"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/recommend_card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recommend_card1"
        android:layout_marginTop="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.parse.ParseImageView
                android:id="@+id/food_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meat"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="0dp"
                android:layout_below="@+id/chef_image1"
                android:layout_centerHorizontal="true"
                android:maxHeight="250dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <ImageView
                android:id="@+id/chef_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/chefface"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/chef_name1"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="@string/chef_name"
                android:layout_toEndOf="@+id/chef_image1"
                android:layout_marginTop="20dp"
                android:textSize="15sp"/>

            <!--<TextView-->
            <!--android:id="@+id/chef_description_short"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:text="Chef Description"-->
            <!--android:layout_toEndOf="@+id/chef_image"-->
            <!--android:layout_below="@+id/chef_name"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:textSize="12sp"/>-->



            <TextView
                android:id="@+id/food_description_short1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="@string/food_description_short"
                android:layout_margin="5dp"
                android:layout_below="@+id/food_icon1"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:paddingEnd="5dp"
                android:paddingStart="3dp"/>

            <Button
                android:id="@+id/order_button1"
                style="@style/Button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/order_button"
                android:layout_below="@+id/food_icon1"
                android:layout_alignEnd="@+id/food_icon1"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>
