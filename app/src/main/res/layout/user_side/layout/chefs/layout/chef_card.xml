<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background_light_grey">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/chef_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/chef_name"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Chef Name"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_alignTop="@+id/chef_image"
                android:layout_toEndOf="@+id/chef_image"
                android:padding="2dp" />

            <TextView
                android:id="@+id/chef_fav_dish"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Chef Fav Dish"
                android:textSize="12dp"
                android:padding="2dp"
                android:layout_below="@+id/chef_name"
                android:layout_alignStart="@+id/chef_name" />

            <TextView
                android:id="@+id/chef_specialty"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="Chef Specialty"
                android:textSize="12dp"
                android:padding="2dp"
                android:layout_below="@+id/chef_fav_dish"
                android:layout_alignStart="@+id/chef_fav_dish"
                android:layout_marginEnd="5dp"/>



            <Button
                android:id="@+id/follow_chef_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/follow_chef_button"
                android:layout_below="@+id/chef_fav_dish"
                android:layout_toEndOf="@+id/chef_specialty" />
        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>
