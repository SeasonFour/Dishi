<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chef_image"
                android:src="@drawable/chefface"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true" />

            <TextView
                android:id="@+id/chef_name"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="@string/chef_name"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_alignTop="@+id/chef_image"
                android:layout_toEndOf="@+id/chef_image"
                android:padding="2dp" />

            <TextView
                android:id="@+id/chef_fav_dish"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="@string/favourite_food"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_below="@+id/chef_name"
                android:layout_alignStart="@+id/chef_name" />

            <TextView
                android:id="@+id/chef_specialty"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="@string/chef_specialty"
                android:textSize="12dp"
                android:padding="2dp"
                android:layout_below="@+id/chef_fav_dish"
                android:layout_alignStart="@+id/chef_fav_dish"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/follow_chef_button"
                style="@style/Button4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/follow_chef_button"
                android:layout_below="@+id/chef_fav_dish"
                android:layout_toEndOf="@+id/chef_specialty" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="3dp"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chef_image2"
                android:src="@drawable/chefface2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true" />

            <TextView
                android:id="@+id/chef_name2"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="@string/chef_name2"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_alignTop="@+id/chef_image2"
                android:layout_toEndOf="@+id/chef_image2"
                android:padding="2dp" />

            <TextView
                android:id="@+id/chef_fav_dish2"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="@string/favourite_dish_2"
                android:textSize="12sp"
                android:padding="2dp"
                android:layout_below="@+id/chef_name2"
                android:layout_alignStart="@+id/chef_name2" />

            <TextView
                android:id="@+id/chef_specialty2"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="@string/chef_speciality2"
                android:textSize="12dp"
                android:padding="2dp"
                android:layout_below="@+id/chef_fav_dish2"
                android:layout_alignStart="@+id/chef_fav_dish2"
                android:layout_marginEnd="5dp"/>

            <Button
                android:id="@+id/follow_chef_button2"
                style="@style/Button4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/follow_chef_button"
                android:layout_below="@+id/chef_fav_dish2"
                android:layout_toEndOf="@+id/chef_specialty2" />
        </RelativeLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>
